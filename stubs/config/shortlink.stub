import env from '#start/env'
import { defineConfig } from '@mixxtor/adonisjs-shortlink'

const shortlinkConfig = defineConfig({
  /*
  |--------------------------------------------------------------------------
  | Shortlink Model
  |--------------------------------------------------------------------------
  |
  | The Lucid model to use for shortlink operations. This allows you to
  | use a custom model or extend the package's default model.
  |
  */
  model: () => import('#models/shortlink'),

  /*
  |--------------------------------------------------------------------------
  | Enable Shortlink Service
  |--------------------------------------------------------------------------
  |
  | Whether the shortlink service is enabled. When disabled, the service
  | will not process any shortlink operations.
  |
  */
  enabled: env.get('SHORTLINK_ENABLED', true),

  /*
  |--------------------------------------------------------------------------
  | Short Domain
  |--------------------------------------------------------------------------
  |
  | The domain used for generating short URLs. This should be a short,
  | memorable domain name dedicated to your shortlink service.
  |
  | Example: short.domain.com, s.yourdomain.com, go.yourdomain.com
  |
  */
  domain: env.get('SHORTLINK_DOMAIN'),

  /*
  |--------------------------------------------------------------------------
  | Protocol
  |--------------------------------------------------------------------------
  |
  | The protocol to use for generating short URLs.
  |
  */
  protocol: env.get('SHORTLINK_PROTOCOL', 'https'),

  /*
  |--------------------------------------------------------------------------
  | Base Path
  |--------------------------------------------------------------------------
  |
  | The base path for shortlinks. This will be appended to your domain
  | to create the full shortlink URL structure.
  |
  | Example: With path 's', URLs will be: domain.com/s/slug
  |
  */
  path: env.get('SHORTLINK_PATH'),

  /*
  |--------------------------------------------------------------------------
  | Slug Length
  |--------------------------------------------------------------------------
  |
  | The default length of generated slugs. Longer slugs provide more
  | unique combinations but result in longer URLs.
  |
  */
  slugLength: env.get('SHORTLINK_SLUG_LENGTH', 8),

  /*
  |--------------------------------------------------------------------------
  | Enable Click Tracking
  |--------------------------------------------------------------------------
  |
  | Whether to track clicks on shortlinks. When enabled, each click will
  | increment the click counter in the database.
  |
  */
  trackClicks: env.get('SHORTLINK_TRACK_CLICKS', true),

  /*
  |--------------------------------------------------------------------------
  | Redirect Status Code
  |--------------------------------------------------------------------------
  |
  | The HTTP status code to use for redirects.
  | 301 = Permanent redirect (cached by browsers)
  | 302 = Temporary redirect (not cached)
  |
  */
  redirectStatusCode: env.get('SHORTLINK_REDIRECT_STATUS_CODE', 301),

  /*
  |--------------------------------------------------------------------------
  | Database Connection
  |--------------------------------------------------------------------------
  |
  | The database connection to use for shortlinks
  |
  */
  connection: env.get('SHORTLINK_DB_CONNECTION', env.get('DB_CONNECTION', 'pg')),

  /*
  |--------------------------------------------------------------------------
  | Table Name
  |--------------------------------------------------------------------------
  |
  | The database table name for shortlinks
  |
  */
  tableName: env.get('SHORTLINK_TABLE_NAME', 'shortlinks'),
})

export default shortlinkConfig
